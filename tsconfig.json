{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "",
    "paths": {
      "@h3tag-blockchain/shared": ["packages/shared/src/*"],
      "@h3tag-blockchain/core": ["packages/core/src/*"],
      "@h3tag-blockchain/api": ["packages/api/src/*"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/core" },
    { "path": "./packages/api" }
  ],
  "include": [
    "./packages/shared/src/**/*",
    "./packages/core/src/**/*",
    "./packages/api/src/**/*",
    "src/**/*",
    "types/**/*",
    "packages/consensus/src/direct-voting.ts",
    "packages/consensus/src/hybrid-direct.ts",
    "packages/consensus/src/pow.ts",
    "packages/consensus/src/utils"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
